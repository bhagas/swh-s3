<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Tambah Data User</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a></li>
        <li><a href="/user">Data User</a></li>
        <li class="active">Tambah Data</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="panel-header header-line">
          <!-- Notifikasi -->
        </div>
        <div class="panel-content">
          <div class="row">
            <div class="col-md-12">

              <!-- Start form -->
              <form role="form" action="/user/submit_insert" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label>Username</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="" name="username" required>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Password</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="password" class="form-control" id="" name="pwd" required>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Sebagai</label>
                  <div class="row">
                    <div class="col-md-6">
                      <select class="form-control" name="kel">
                        <option value="">ADMIN</option>
                        <%for(var i=0; i<kel.length; i++){%>
                            <option><%= kel[i].nama_kelurahan%></option>
                          <%}%>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Nama Lengkap</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="" name="fullname" required>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>NIP</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="" name="NIP" >
                    </div>
                  </div>
                </div>

              
                <!-- <button class="btn btn-primary btn-embossed" type="submit">Simpan Data Pemohon</button> -->
              


                <div class="form-group">
                  <label>Email</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="email" class="form-control" id="" name="email" required>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Telepon</label>
                  <div class="row">
                    <div class="col-md-6"><input type="text" class="form-control" id="" name="telp" ></div>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary btn-embossed">Simpan</button>
              </form>
              <!-- End form -->
              
            </div>
          </div>
        </div>
      </div>
    </div>  
  </div>
  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2020 </span>
        <span>Pemerintah Kota Salatiga | Dinas Pertanian</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

