<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Kalender Tanam</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a></li>
        <li><a href="/detail_lahan/list">Data</a></li>
        <li class="active">Edit Data</li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-content">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 table-no-border">
              <table class="table table-bordered m-b-0">
                <tbody>
                  <tr>
                    <td style="width: 160px;">No. Bidang</td>
                    <td style="width: 1px;">:</td>
                    <td><%= data[0].no_bidang%></td>
                  </tr>

                  <tr>
                    <td>Alamat</td>
                    <td>:</td>
                    <td><%= data[0].alamat%></td>
                  </tr>

                  <tr>
                    <td>Kecamatan</td>
                    <td>:</td>
                    <td><%= data[0].kec%></td>
                  </tr>

                  <tr>
                    <td>Kelurahan</td>
                    <td>:</td>
                    <td><%= data[0].kel%></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 table-no-border">
              <table class="table table-bordered m-b-0">
                <tbody>
                  <tr>
                    <td style="width: 160px;">Pemilik</td>
                    <td  style="width: 1px;">:</td>
                    <td><%= data[0].pemilik%></td>
                  </tr>

                  <tr>
                    <td>Jenis Lahan</td>
                    <td>:</td>
                    <td><%= data[0].jenis_lahan%></td>
                  </tr>

                  <tr>
                    <td>Status Lahan</td>
                    <td>:</td>
                    <td><%= data[0].status_lahan%></td>
                  </tr>

                  <tr>
                    <td>Luas</td>
                    <td>:</td>
                    <td><%= data[0].luas%></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <hr/>
            </div>
          </div>

          <div class="row">
            <form method="POST" action="/detail_lahan/submit_katam">
              <input type="hidden" class="form-control" name="detailLahanId" id="" value="<%= data[0].id%>">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
              <div class="form-group">
                <label>Komoditas</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <select class="form-control" name="komoditaId" id="" data-search="true">
                     <% for(var i=0;i<komoditas.length; i++){%>
                       <option value="<%= komoditas[i].id%>"><%= komoditas[i].nama%></option>
                      <%}%>
                    </select>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label>Mulai Tanam</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <select class="form-control" name="bulan_awal" id="">
                     <option value="">-- Pilih --</option>  
                     <option value="1">Januari</option>
                     <option value="2">Februari</option>
                     <option value="3">Maret</option>
                     <option value="4">April</option>
                     <option value="5">Mei</option>
                     <option value="6">Juni</option>
                     <option value="7">Juli</option>
                     <option value="8">Agustus</option>
                     <option value="9">September</option>
                     <option value="10">Oktober</option>
                     <option value="11">November</option>
                     <option value="12">Desember</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label>Akhir Tanam</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <select class="form-control" name="bulan_akhir" id="">
                     <option value="">-- Pilih --</option>  
                     <option value="1">Januari</option>
                     <option value="2">Februari</option>
                     <option value="3">Maret</option>
                     <option value="4">April</option>
                     <option value="5">Mei</option>
                     <option value="6">Juni</option>
                     <option value="7">Juli</option>
                     <option value="8">Agustus</option>
                     <option value="9">September</option>
                     <option value="10">Oktober</option>
                     <option value="11">November</option>
                     <option value="12">Desember</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
              <div class="form-group">
                <label>Produktifitas (ton/hektar)</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <input type="text" class="form-control" name="ton" id="">
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label>Tahun</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <select class="form-control" name="tahun" data-search="true">
                      <%for(var c = 2018; c <=2024; c++){%>
                      <option><%=c%></option>
                      <%}%>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            

            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
              <button class="btn btn-warning btn-embossed" style="margin-bottom: 0px;" type="submit">Tambah</button>
            </div>
          </form>
          </div>

          <div class="row m-t-30">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Komoditas</th>
                    <th>Mulai Tanam</th>
                    <th>Akhir Tanam</th>
                    <th>Produktifitas (ton/hektar)</th>
                    <th>Tahun</th>
                    <th>Option</th>
                  </tr>
                </thead>
                <tbody>
                  <%for(var i=0;i<katam.length; i++){%>
                  <tr>
                    <td><%= katam[i].komodita.nama%></td>
                    <td><%= katam[i].bulan_awal%></td>
                    <td><%= katam[i].bulan_akhir%></td>
                    <td><%= katam[i].ton%></td>
                    <td><%= katam[i].tahun%></td>
                    <td><a class="btn btn-danger btn-embossed btn-sm"
                      href="/detail_lahan/delete_katam/<%= katam[i].id%>/<%= data[0].id%>" role="button"
                      onclick="return confirm('Apakah anda yakin untuk menghapus data ini ?');"><i
                        class="fa fa-trash-o" aria-hidden="true"></i></a></td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2020</span>
        <span>Pemerintah Kota Salatiga | Dinas Pertanian</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

