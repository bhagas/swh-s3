<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Edit Data</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a></li>
        <li><a href="/detail_lahan/list">Data</a></li>
        <li class="active">Edit Data</li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-content">
          <form role="form" action="/detail_lahan/edit" method="POST" enctype="multipart/form-data">
            <input type="hidden" class="form-control" name="id" id="" value="<%= data[0].id%>">
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                  <label>No. Bidang</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="no_bidang" id="" value="<%= data[0].no_bidang%>">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label>Alamat</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="alamat" id="" value="<%= data[0].alamat%>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Kecamatan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <select class="form-control" name="kec" id="kec">
                        <option value="">-- Pilih --</option>
                        <% for(var i=0; i<kec.length; i++){ %>
                          <option><%= kec[i].nama_kecamatan%></option>
                          <%}%>

                      </select>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Kelurahan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <select class="form-control" name="kel" id="kel" data-search="true">
                        
                      </select>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Pemilik</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="pemilik" id="" value="<%= data[0].pemilik%>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Penggarap</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="penggarap" id="" value="<%= data[0].penggarap%>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Jenis Lahan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="jenis_lahan" id="" value="<%= data[0].jenis_lahan%>">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label>Status Lahan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="status_lahan" id="" value="<%= data[0].status_lahan%>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Luas</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="luas" id="" value="<%= data[0].luas%>">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label>Pemanfaatan Lahan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <select class="form-control" name="pemanfaatan_lahan" id="pemanfaatan_lahan">
                        <option value="">-- Pilih --</option>

                        <option>sawah</option>

                      </select>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Intensitas Tanam</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="intensitas_tanam" id="" value="<%= data[0].intensitas_tanam%>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Status Irigasi</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <select class="form-control" name="status_irigasi" id="status_irigasi">
                        <option value="">-- Pilih --</option>

                        <option>aktif</option>

                      </select>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label>Nama DI</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" class="form-control" name="nama_di" id="" value="<%= data[0].nama_di%>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Keterangan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <textarea class="form-control" name="keterangan" id="keterangan"><%- data[0].keterangan%></textarea>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label>Upload Foto Peta</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="file" class="form-control" name="sumber_lp2b" id=""><%if(data[0].sumber_lp2b!=""){%><img src="/foto/<%= data[0].sumber_lp2b%>" style="width:200px"><%}%>
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary btn-embossed">Simpan</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2018</span>
        <span>Pemerintah</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

<% include ../../template-backoffice/footer.ejs %>
<script type="text/javascript">
$('#kec').val('<%= data[0].kec%>');
$('#pemanfaatan_lahan').val('<%= data[0].pemanfaatan_lahan%>');
$('#status_irigasi').val('<%= data[0].status_irigasi%>');
$.ajax({
                              type : "GET",
                              async : false,
                              global : false,
                              url : "/detail_lahan/get_kel/"+$('#kec').val(),
                              dataType : 'json',
                              success: function (data) {
                                console.log(data)
                                $('#kel').html('<option value="">-- Pilih --</option>');
                               $.each(data, function(index, item){
                                  
                                    $('#kel').append('<option>'+item.nama_kelurahan+'</option>');
                                  
                                  
                              })
                              $("#kel").val('<%= data[0].kel%>');
                              }
                            });

$('#kec').change(function(){
  
  $("#kel").empty();
  
        $('#kel').select2('val', null);

                     $.ajax({
                              type : "GET",
                              async : false,
                              global : false,
                              url : "/detail_lahan/get_kel/"+$('#kec').val(),
                              dataType : 'json',
                              success: function (data) {
                                console.log(data)
                                $('#kel').html('<option value="" selected>-- Pilih --</option>');
                               $.each(data, function(index, item){
                                  
                                    $('#kel').append('<option>'+item.nama_kelurahan+'</option>');
                                  
                                  
                              })
                             
                              }
                            });   
                    
                    
                })
</script>